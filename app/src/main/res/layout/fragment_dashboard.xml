<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.DashboardFragment">


    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/swiperefresh"
        android:layout_below="@+id/layoutt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:gravity="center_horizontal"
                    android:text="slide down to refresh"></TextView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    app:cardBackgroundColor="#9F000000">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingVertical="5dp"
                        android:orientation="horizontal">



                        <LinearLayout
                            android:id="@+id/lout_efu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="20dp"
                            android:layout_centerVertical="true"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="EFU Takaful"
                                android:textSize="15dp"
                                android:textStyle="bold"
                                android:textColor="@color/bg_light"></TextView>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:id="@+id/txt_takaful"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="00"
                                    android:textSize="25dp"
                                    android:textStyle="bold"
                                    android:textColor="@color/bg_light"></TextView>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=" Rs"
                                    android:textSize="20dp"
                                    android:textStyle="bold"
                                    android:textColor="@color/bg_light"></TextView>
                            </LinearLayout>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="20dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sumcovered"
                                android:textColor="@color/bg_light"
                                android:textSize="15dp"
                                android:textStyle="bold"></TextView>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/txt_sumcovered"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="00"
                                    android:textColor="@color/bg_light"
                                    android:textSize="25dp"
                                    android:textStyle="bold"></TextView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=" Rs"
                                    android:textColor="@color/bg_light"
                                    android:textSize="20dp"
                                    android:textStyle="bold"></TextView>
                            </LinearLayout>

                        </LinearLayout>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_marginTop="5dp"
                    android:elevation="8dp"
                    android:layout_marginHorizontal="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg3">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="20dp"
                            android:layout_centerVertical="true"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity=""
                                android:text="Balance"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:textColor="@color/bg_light"></TextView>


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:id="@+id/txt_balance"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="00"
                                    android:textSize="45dp"
                                    android:textStyle="bold"
                                    android:textColor="@color/bg_light"></TextView>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=" Rs"
                                    android:textSize="20dp"
                                    android:textStyle="bold"
                                    android:textColor="@color/bg_light"></TextView>
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@drawable/shape_line"></View>

                        </LinearLayout>





                        <Button
                            android:id="@+id/btn_profit"
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:backgroundTint="@color/bg_light"
                            android:layout_marginRight="20dp"
                            android:layout_centerVertical="true"
                            android:text="Profit/Tax History"></Button>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginTop="5dp"
                    android:elevation="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@drawable/bg5"
                        >

                        <LinearLayout
                            android:id="@+id/lout_investment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="20dp"
                            android:layout_centerVertical="true"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Investment"
                                android:textSize="25dp"
                                android:textStyle="bold"
                                android:textColor="@color/bg_light"></TextView>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@drawable/shape_line"></View>



                        </LinearLayout>


                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="80dp"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/investment_icon"
                            android:layout_below="@+id/lout_investment"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="20dp">
                        </ImageView>



                        <Button
                            android:id="@+id/btn_niReq"
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:backgroundTint="@color/bg_light"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="20dp"
                            android:text="Invest"></Button>

                        <Button
                            android:id="@+id/btn_iReq"
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:backgroundTint="@color/bg_light"
                            android:layout_below="@+id/btn_niReq"
                            android:layout_marginEnd="20dp"
                            android:text="Pending"></Button>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginTop="5dp"
                    android:elevation="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@drawable/bg4"
                        >

                        <LinearLayout
                            android:id="@+id/lout_withdraw"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="20dp"
                            android:layout_centerVertical="true"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Withdraw"
                                android:textSize="25dp"
                                android:textStyle="bold"
                                android:textColor="@color/bg_light"></TextView>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@drawable/shape_line"></View>



                        </LinearLayout>

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="80dp"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/withdraw_icon"
                            android:layout_below="@+id/lout_withdraw"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="20dp">
                        </ImageView>


                        <Button
                            android:id="@+id/btn_nwReq"
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/bg_light"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="20dp"
                            android:text="Withdraw"></Button>

                        <Button
                            android:id="@+id/btn_wReq"
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/bg_light"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/btn_nwReq"
                            android:layout_marginEnd="20dp"
                            android:text="Pending"></Button>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginBottom="30dp"
                    android:layout_marginTop="5dp"
                    android:elevation="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@drawable/bg2"
                        >

                        <LinearLayout
                            android:id="@+id/lout_transaction"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="20dp"
                            android:layout_centerVertical="true"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Transactions"
                                android:textSize="25dp"
                                android:textStyle="bold"
                                android:textColor="@color/bg_light"></TextView>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@drawable/shape_line"></View>



                        </LinearLayout>


                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="80dp"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/transaction_icon"
                            android:layout_below="@+id/lout_transaction"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="20dp">
                        </ImageView>


                        <Button
                            android:id="@+id/btn_transactions"
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:backgroundTint="@color/bg_light"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="20dp"
                            android:layout_marginEnd="20dp"
                            android:text="Details"></Button>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </ScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>






</androidx.coordinatorlayout.widget.CoordinatorLayout>