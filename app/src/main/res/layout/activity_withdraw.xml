<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LC.ActivityWithdraw">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="5dp"
            android:background="#9F000000"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Withdraw"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:textColor="@color/bg_light"
                android:textSize="25dp"></TextView>

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:src="@drawable/withdraw_bg"></ImageView>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#9F000000"
            android:paddingHorizontal="3dp"
            android:layout_marginTop="15sp"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="40dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/bg_color"
                android:textStyle="bold"
                android:textSize="16dp"
                android:text="Admin will transfer your money against this bank account !"
                android:gravity="center_horizontal"></TextView>
            <TextView
                android:id="@+id/txt_acNumber_w"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="003002020020230"
                android:textSize="25dp"
                android:textColor="@color/green_glow"
                android:layout_marginBottom="3dp"
                android:textStyle="bold">
            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <View
                    android:layout_width="150dp"
                    android:layout_height="1dp"
                    android:background="@drawable/shape_line"></View>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OR"
                    android:textStyle="bold"
                    android:textColor="@color/green_glow"></TextView>
                <View
                    android:layout_width="150dp"
                    android:layout_height="1dp"
                    android:background="@drawable/shape_line"></View>
            </LinearLayout>

            <CheckBox
                android:id="@+id/chk_acNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Try Another Account"
                android:textColor="@color/bg_light"
                android:textStyle="bold"
                android:backgroundTint="@color/bg_light"
                android:foregroundTint="@color/bg_light"
                android:buttonTint="@color/green_glow"
                android:layout_marginBottom="5sp">
            </CheckBox>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:layout_marginHorizontal="40dp">






        </LinearLayout>


        <EditText
            android:id="@+id/edit_ac_amount_w"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:minHeight="55dp"
            android:paddingTop="5sp"
            android:foregroundTint="@color/bg_light"
            android:textColorHint="@color/bg_color"
            android:inputType="number"
            android:textColor="@color/bg_light"
            android:paddingBottom="5dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"

            android:background="@drawable/card_shadow"
            android:layout_marginTop="5dp"
            android:hint="Withdraw Amount"></EditText>



        <Button
            android:id="@+id/btn_withdraw_w"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:elevation="16dp"
            android:textColor="@color/white"
            android:layout_marginHorizontal="45dp"
            android:background="@drawable/shape_btn"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:text="Withdraw"></Button>
    </LinearLayout>





</ScrollView>