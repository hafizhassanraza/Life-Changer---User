<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LC.ActivitySignUp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="5dp"
            android:background="#9F000000"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign Up"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:textColor="@color/bg_light"
                android:textSize="25dp"></TextView>

        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:elevation="8dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_userProfile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/avatar"></ImageView>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>
        <Button
            android:id="@+id/btn_addPhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Photo"
            android:paddingHorizontal="30dp"
            android:textColor="@color/white"
            android:backgroundTint="@color/bg_light"
            android:layout_gravity="center_horizontal"
            ></Button>
        <EditText
            android:id="@+id/edit_fname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:minHeight="55dp"
            android:paddingTop="5sp"
            android:foregroundTint="@color/bg_light"
            android:textColorHint="@color/bg_color"
            android:textColor="@color/bg_light"
            android:inputType="textPersonName"
            android:paddingBottom="5dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:layout_marginTop="10sp"
            android:background="@drawable/card_shadow"
            android:hint="First Name"></EditText>

        <EditText
            android:id="@+id/edit_lname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:minHeight="55dp"
            android:paddingTop="5sp"
            android:foregroundTint="@color/bg_light"
            android:textColorHint="@color/bg_color"
            android:inputType="textPersonName"
            android:textColor="@color/bg_light"
            android:paddingBottom="5dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:background="@drawable/card_shadow"
            android:layout_marginTop="5dp"
            android:hint="Last Name"></EditText>

        <EditText
            android:id="@+id/edit_userAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:minHeight="95dp"
            android:paddingTop="10sp"
            android:foregroundTint="@color/bg_light"
            android:textColorHint="@color/bg_color"
            android:inputType="textPostalAddress"
            android:textColor="@color/bg_light"
            android:paddingBottom="10dp"
            android:paddingStart="15dp"
            android:gravity="top"
            android:paddingEnd="15dp"
            android:background="@drawable/card_shadow"
            android:layout_marginTop="5dp"
            android:hint="Address"></EditText>



        <EditText
            android:id="@+id/edit_userPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:layout_marginTop="5sp"
            android:maxLength="12"
            android:foregroundTint="@color/bg_light"
            android:textColorHint="@color/bg_color"
            android:textColor="@color/bg_light"
            android:layout_marginHorizontal="40dp"
            android:minHeight="55dp"
            android:paddingTop="5sp"
            android:paddingBottom="5dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:background="@drawable/card_shadow"
            android:hint="Mobile (03XX-XXXXXXX)"></EditText>


        <EditText
            android:id="@+id/edit_userID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:layout_marginTop="5sp"
            android:maxLength="15"
            android:foregroundTint="@color/bg_light"
            android:textColorHint="@color/bg_color"
            android:textColor="@color/bg_light"
            android:layout_marginHorizontal="40dp"
            android:minHeight="55dp"
            android:paddingTop="5sp"
            android:paddingBottom="5dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:background="@drawable/card_shadow"
            android:hint="C.N.I.C"></EditText>
        <EditText
            android:id="@+id/edit_userPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:minHeight="55dp"
            android:paddingTop="5sp"
            android:foregroundTint="@color/bg_light"
            android:textColorHint="@color/bg_color"
            android:textColor="@color/bg_light"
            android:inputType="textPassword"
            android:paddingBottom="5dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:background="@drawable/card_shadow"
            android:layout_marginTop="5dp"
            android:hint="Password"></EditText>

        <EditText
            android:id="@+id/edit_userCPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:minHeight="55dp"
            android:paddingTop="5sp"
            android:foregroundTint="@color/bg_light"
            android:textColorHint="@color/bg_color"
            android:textColor="@color/bg_light"
            android:inputType="textPassword"
            android:paddingBottom="5dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:background="@drawable/card_shadow"
            android:layout_marginTop="5dp"
            android:hint="Confirm Password"></EditText>




        <Button
            android:id="@+id/btn_next_signUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:elevation="16dp"
            android:textColor="@color/white"
            android:layout_marginHorizontal="45dp"
            android:background="@drawable/shape_btn"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:text="Next"></Button>
    </LinearLayout>





</ScrollView>