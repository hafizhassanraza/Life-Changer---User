<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    tools:context=".LC.ActivitySignIn">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="5dp"
        android:background="#9F000000"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:textColor="@color/bg_light"
            android:textSize="25dp"></TextView>

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:src="@drawable/s_bg"></ImageView>

    <EditText
        android:id="@+id/edit_userID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:inputType="phone"
        android:maxLength="15"
        android:foregroundTint="@color/bg_light"
        android:textColorHint="@color/bg_color"
        android:textColor="@color/bg_light"
        android:layout_marginHorizontal="40dp"
        android:minHeight="55dp"
        android:paddingTop="5sp"
        android:paddingBottom="5dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:background="@drawable/card_shadow"
        android:hint="C.N.I.C"></EditText>
    <EditText
        android:id="@+id/edit_userPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:minHeight="55dp"
        android:paddingTop="5sp"
        android:foregroundTint="@color/bg_light"
        android:textColorHint="@color/bg_color"
        android:textColor="@color/bg_light"
        android:inputType="textPassword"
        android:paddingBottom="5dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:background="@drawable/card_shadow"
        android:layout_marginTop="5dp"
        android:hint="Password"></EditText>
    <TextView
        android:id="@+id/txt_forget_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@drawable/clickable_text_back"
        android:textStyle="bold"
        android:background="#9F000000"
        android:clickable="true"
        android:paddingHorizontal="5sp"
        android:paddingVertical="2dp"
        android:layout_marginHorizontal="45dp"
        android:layout_gravity="right"
        android:layout_marginTop="3dp"
        android:textSize="16dp"
        android:text="@string/forget_pass"></TextView>
    <Button
        android:id="@+id/btn_signin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:elevation="16dp"
        android:textColor="@color/white"
        android:layout_marginHorizontal="45dp"
        android:background="@drawable/shape_btn"
        android:layout_gravity="center_horizontal"
        android:text="Sign In"></Button>
    <Button
        android:id="@+id/btn_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:elevation="16dp"
        android:layout_marginHorizontal="45dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:background="@drawable/shape_btn_hollow"
        android:layout_gravity="center_horizontal"
        android:text="Sign Up"></Button>



</LinearLayout>