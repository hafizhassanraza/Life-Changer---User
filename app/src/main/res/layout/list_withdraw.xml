<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        app:cardBackgroundColor="#9F000000"
        android:layout_marginTop="5dp"
        android:elevation="8dp"
        app:cardElevation="8dp"
        app:cardCornerRadius="8dp">
        <LinearLayout
            android:id="@+id/layout_Claimed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="3dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/bg_light"
                        android:textSize="16dp"
                        android:text="Investment Request"></TextView>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@drawable/shape_line">
                    </View>


                </LinearLayout>
                <TextView
                    android:id="@+id/txt_date_invest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DATE AND TIME"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:textSize="12dp"
                    android:textColor="@color/bg_light"
                    android:layout_alignParentRight="true"></TextView>
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/bg_light"
                        android:layout_marginHorizontal="10sp"
                        android:text="Your Request of Withdraw">
                    </TextView>
                    <TextView
                        android:id="@+id/txt_amount_invest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/green_glow"
                        android:layout_marginHorizontal="10sp"
                        android:textStyle="bold"
                        android:textSize="22dp"
                        android:text="300 Rs">
                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/bg_light"
                        android:layout_marginHorizontal="10sp"
                        android:text="against (withdraw account) "></TextView>
                    <TextView
                        android:id="@+id/txt_Account_Withdraw"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00162984939503"
                        android:layout_marginHorizontal="10sp"
                        android:textStyle="bold"
                        android:textColor="@color/green_glow">
                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10sp"
                        android:layout_marginBottom="3sp"
                        android:textColor="@color/bg_color"
                        android:layout_gravity="center_horizontal"
                        android:text="is pending. Please wait for EFU (admin) response. Thank You !"></TextView>

                </LinearLayout>
            </LinearLayout>



        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>